
all: $(OUTDIR)$(DIRSEP)$(EXE)

clean:
	$(RMFILE) $(OBJS)
	$(RMFILE) $(OUTDIR)$(DIRSEP)$(EXE)
	$(WINDOWS_DELETE_SDL_DLL)
	$(WINDOWS_DELETE_LIBSSL_DLL)
	$(WINDOWS_DELETE_LIBCRYPTO_DLL)

$(OUTDIR)$(DIRSEP)$(EXE): $(OBJS) $(OUTDIR)
	$(CC) $(OUTFLAG)$@ $(OBJS) $(LIBS)
	$(WINDOWS_COPY_SDL_DLL)
	$(WINDOWS_COPY_LIBSSL_DLL)
	$(WINDOWS_COPY_LIBCRYPTO_DLL)

$(OUTDIR):
	$(MKDIR) $(OUTDIR)
